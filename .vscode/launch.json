    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Test Build",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/php/build.php",
            "cwd": "${workspaceFolder}/php",
            "port": 9000,
            "args": [
                "-b",
                "php-graphql",
                "-f",
                "..\\test.xml",
                "-o",
                "test2",
                "--db-script",
                "../lib/script/db.php",
                "-r"
            ]
        },
        {
            "name": "Full test",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/php/test/test.php",
            "cwd": "${workspaceFolder}/php/test",
            "port": 9000,
            "args": []
        },
        {
            "name": "Real Build",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/php/build.php",
            "cwd": "${workspaceFolder}/php",
            "port": 9000,
            "args": [
                "-b",
                "php-graphql",
                "-f",
                "S:\\Exchange\\htdocs\\werwolf\\doc\\version-1.0\\db\\db-schema.xml",
                "-o",
                "test",
                "--db-script",
                "../lib/script/db.php"
            ]
        },
    ]
}